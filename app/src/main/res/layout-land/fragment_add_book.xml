<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="it.jaschke.alexandria.AddBook">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="horizontal">



        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="1"
            android:padding="@dimen/activity_margin"
            >

            <LinearLayout
                android:id="@+id/eancontainer"
                android:layout_height="wrap_content"
                android:layout_width="fill_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:orientation="horizontal"
                app:layout_columnSpan="2">

                <EditText
                    android:id="@+id/ean"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="@string/input_hint"
                    android:inputType="number"
                    android:maxLength="@integer/ean_size"
                    android:maxLines="1"
                    android:minEms="@integer/ean_width"
                    android:saveEnabled="true"
                    android:textIsSelectable="false"/>

                <Button
                    android:id="@+id/scan_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/scan_button"/>
            </LinearLayout>

            <ImageView
                android:id="@+id/bookCover"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/eancontainer"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"
                android:contentDescription="@string/book_cover"
                android:minHeight="20dip"
                android:minWidth="20dip"
                app:layout_rowSpan="4"

                tools:src="@drawable/book_cover"
                />

            <TextView
                android:id="@+id/bookTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/bookCover"
                android:layout_alignTop="@id/bookCover"
                android:textIsSelectable="true"
                android:textSize="@dimen/head_line"
                android:textStyle="bold"
                tools:text="A Game of Thrones"/>

            <TextView
                android:id="@+id/bookSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bookTitle"
                android:layout_below="@id/bookTitle"
                tools:text="subtitle"/>


            <TextView
                android:id="@+id/authors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bookTitle"
                android:layout_below="@id/bookSubTitle"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/small_fontsize"
                tools:text="George R. R. Martin"
                />

            <TextView
                android:id="@+id/categories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/bookTitle"
                android:layout_below="@id/authors"
                android:layout_marginTop="16dp"
                android:textSize="@dimen/small_fontsize"
                tools:text="category"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"

            android:orientation="vertical"
            >

            <ImageButton
                android:id="@+id/delete_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:contentDescription="@string/cancel_button"
                android:src="@drawable/ic_action_discard"
                android:visibility="invisible"
                tools:visibility="visible"
                />

            <ImageButton
                android:id="@+id/save_button"
                style="?android:attr/buttonBarButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:contentDescription="@string/ok_button"
                android:src="@drawable/ic_action_accept"
                android:text="@string/ok_button"
                android:visibility="invisible"
                tools:visibility="visible"
                />


        </LinearLayout>
    </LinearLayout>
</FrameLayout>
